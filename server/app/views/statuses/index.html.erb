<div class="page-header">
  <h1>Wszystkie statusy</h1>
</div>

<!-- Pętls odpowiedzialna za wyswietlanie statusów -->
<% @statuses.each do | status | %>

<div class="container">
  <div class="status">
    <div class="row">
      <div class="col-md-1 img">

          <%= link_to image_tag(status.user.gravatar_url), profile_path(status.user) %>

      </div>
      <div class="col-md-7">
        <div class="row">
          <div class="col-md-12">
            <strong><%= status.user.full_name %></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="meta">
              <%= link_to time_ago_in_words(status.created_at) + " temu", status %>
              <!-- Ustawić potem na jezyk PL-->
              <span class="admin">
                |
                <%= link_to "Edytuj", edit_status_path(status) %>
                |
                <%= link_to "Usuń", status, method: :delete, data: { confirm: "Jesteś pewny że chcesz to usunać"} %>
              </span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 content">
            <p><%= status.content %></p>
            <%= status_document_link(status)%>
            <%= status_image_link(status)%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
