<p id="notice"><%= notice %></p>
<div class="container">
  <div class="status">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-12">
            <strong><%= @status.user.full_name %></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 content">
            <p><%= @status.content %></p>
          </div>
        </div>
        <div class="row file">

          <% if @status.document &&  @status.document.attachment? %>
                 <%= status_document_link @status %>
               <hr />
             <% end %>
          <% if @status.image &&  @status.image.img? %>
                    <%= status_image_link @status %>
                  <hr />
                <% end %>
        </div>
        <div class="row edit">



          <div class="col-md-12">
            <p>

              <%= link_to 'Edytuj', edit_status_path(@status) %>
              |
              <%= link_to 'Cofnij', statuses_path %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
